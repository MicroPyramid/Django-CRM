# Docker development environment variables
# Copy to .env.docker.local and customize if needed

# Django
SECRET_KEY=django-insecure-docker-dev-key-change-in-production
DEBUG=True
ENV_TYPE=dev
ALLOWED_HOSTS=localhost,127.0.0.1,backend
DOMAIN_NAME=http://localhost:8000
SWAGGER_ROOT_URL=http://localhost:8000

# Database (must match docker-compose db service)
DBNAME=crm_db
DBUSER=crm_user
DBPASSWORD=crm_password
DBHOST=db
DBPORT=5432

# Postgres superuser (used by db service to create the database)
POSTGRES_DB=crm_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_password

# Celery / Redis
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Email (console backend in dev â€” emails print to stdout)
DEFAULT_FROM_EMAIL=noreply@localhost
ADMIN_EMAIL=admin@localhost

# CORS
CORS_ALLOW_ALL=True

# Google OAuth (leave blank to disable)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# Frontend
PUBLIC_DJANGO_API_URL=http://localhost:8000
